#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

set -e

#DENO_VERSION=v0.12.0
BUILD_DIR=${1:-.}
HEROKU_DIR=$BUILD_DIR/.heroku
BIN_DIR=$HEROKU_DIR/bin

# install deno
export DENO_DIR=$BUILD_DIR/.heroku
curl -fsSL https://deno.land/x/install/install.sh | sh
# future
#curl -fsSL https://deno.land/x/install/install.sh | sh -s $DENO_VERSION

# set environment variables
PROFILE_PATH="$BUILD_DIR/.profile.d/deno.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$HOME/.heroku/bin:$PATH"' >> $PROFILE_PATH
echo 'export DENO_DIR="$HOME/.heroku/cache"' >> $PROFILE_PATH

# download dependencies

export DENO_DIR=$BUILD_DIR/.heroku/cache
DENO=$BIN_DIR/deno
cd $BUILD_DIR

## fetch.ts
if [ -f fetch.ts ]
then
  $DENO fetch fetch.ts
fi

## Procfile
if [ -f Procfile ]
then
  for WORD in $(cat Procfile)
  do
    WORD=${WORD#\"}
    WORD=${WORD%\"}
    WORD=${WORD#\'}
    WORD=${WORD%\'}
    if [[ "$WORD" =~ (.+)\.(t|j)s ]]
    then
      SCRIPT=$WORD
      set +e
      echo $SCRIPT
      $DENO fetch $SCRIPT
      set -e
    fi
  done
fi

