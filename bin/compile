#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

BUILD_DIR=${1:-.}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd "$(dirname "${0:-}")"; cd ..; pwd)

echo $BUILD_DIR
echo $CACHE_DIR
echo $ENV_DIR
echo $BP_DIR

HEROKU_DIR=$BUILD_DIR/.heroku
mkdir -p $HEROKU_DIR

curl -L https://github.com/denoland/deno/releases/download/v0.12.0/deno_linux_x64.gz -o $HEROKU_DIR/deno.gz
gzip -fd $HEROKU_DIR/deno.gz
chmod 700 $HEROKU_DIR/deno

PROFILE_PATH="$BUILD_DIR/.profile.d/deno.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$HOME/.heroku:$PATH"' >> $PROFILE_PATH
echo "export DENO_DIR=$CACHE_DIR" >> $PROFILE_PATH




